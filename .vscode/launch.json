    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: scrapy",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/tricity",
            "args": [
                "crawl",
                "tricity"
            ]
        },
        {
            "name": "Python: scrapy-flats",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/tricity",
            "args": [
                "crawl",
                "flatsspiders"
            ]
        },
        {
            "name": "Python: dashboards",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dashboards/app.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/dashboards/.env"
        },
        {
            "name": "Python: work",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dashboards/workship.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Docker build tricity",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/automation/docker.py",
            "args": [
                "-folder", "tricity", "-image", "tricity:0.0.4"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Docker build dashboards",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/automation/docker.py",
            "args": [
                "-folder", "tricity", "-image", "tricity:0.0.4"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Helm upgrade",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/automation/helm.py",
            "console": "integratedTerminal"
        }
    ]
}